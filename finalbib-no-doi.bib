	note = {Publisher: Steklov Mathematical Institute of Russian Academy of Sciences},
	pages = {271--306},
}

@article{colella_piecewise_1984,
	title = {The {Piecewise} {Parabolic} {Method} ({PPM}) for {Gas}-{Dynamical} {Simulations}},
