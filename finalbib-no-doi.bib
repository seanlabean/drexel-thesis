	author = {Girichidis, Philipp and Offner, Stella S. R. and Kritsuk, Alexei G. and Klessen, Ralf S. and Hennebelle, Patrick and Kruijssen, J. M. Diederik and Krause, Martin G. H. and Glover, Simon C. O. and Padovani, Marco},
